{
  "extends": "@chatie/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules/",
    "dist/"
  ],
  "include": [
    "app/**/*.ts",
    "bin/*.ts",
    "bot/**/*.ts",
    "examples/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.spec.ts",
    "tests/fixtures/puppet-test/*.ts"
  ],
}
