{
  "extends": "@chatie/tsconfig",
  "compilerOptions": {
    "outDir": "dist/esm",
    "lib": ["DOM"],
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/fixtures/smoke-testing.ts"
  ],
  "include": [
    "app/**/*.ts",
    "bin/*.ts",
    "bot/**/*.ts",
