{
  "name": "wechaty-puppet",
  "version": "0.41.7",
  "description": "Abstract Puppet for Wechaty",
  "main": "dist/src/mod.js",
  "typings": "dist/src/mod.d.ts",
  "engines": {
    "node": ">=12",
    "wechaty": ">=0.60"
  },
  "scripts": {
    "clean": "shx rm -fr dist/*",
    "dist": "npm run clean && tsc",
    "pack": "npm pack",
    "lint": "npm run lint:es && npm run lint:ts && npm run lint:md",
    "lint:md": "markdownlint README.md",
    "lint:ts": "tsc --noEmit",
    "lint:es": "eslint \"src/**/*.ts\" \"tests/**/*.spec.ts\" --ignore-pattern tests/fixtures/",
    "test": "npm run lint && npm run test:unit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "blue-tape -r ts-node/register 'src/**/*.spec.ts' 'tests/**/*.spec.ts'",
    "typedoc": "bash scripts/typedoc.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wechaty/wechaty-puppet.git"
  },
  "keywords": [
    "chatie",
    "wechaty",
    "wechat",
    "chatbot",
    "bot",
    "sdk"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/wechaty/wechaty-puppet/issues"
  },
  "homepage": "https://github.com/wechaty/wechaty-puppet#readme",
  "devDependencies": {
    "@chatie/eslint-config": "^0.12.4",
    "@chatie/git-scripts": "^0.6.2",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^0.17.1",
    "@types/normalize-package-data": "^2.4.0",
    "@types/read-pkg-up": "^6.0.0",
    "pkg-jq": "^0.2.11",
    "shx": "^0.3.3",
    "tsd": "^0.16.0",
    "tstest": "^0.4.10",
    "typedoc": "^1.0.0-dev.4",
    "typescript": "^4.3"
  },
  "dependencies": {
    "brolog": "^1.12.4",
    "clone-class": "^0.6.20",
    "file-box": "^0.16.8",
    "hot-import": "^0.2.14",
    "memory-card": "^0.12.2",
    "normalize-package-data": "^3.0.2",
    "quick-lru": "^5",
    "read-pkg-up": "^7.0.1",
    "rx-queue": "^0.12.3",
    "rxjs": "^7.1.0",
    "semver": "^7.3.5",
    "state-switch": "^0.11.3",
    "typed-emitter": "^1.3.1",
    "watchdog": "^0.8.17"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  }
}
