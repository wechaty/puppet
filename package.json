{
  "name": "wechaty-puppet",
  "version": "0.15.4",
  "description": "Abstract Puppet for Wechaty",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "engines": {
    "wechaty": ">=0.17.46"
  },
  "scripts": {
    "clean": "shx rm -fr dist/*",
    "dist": "npm run clean && tsc",
    "pack": "npm pack",
    "lint": "npm run lint:ts && npm run lint:md",
    "lint:md": "markdownlint README.md",
    "lint:ts": "tslint --project tsconfig.json && tsc --noEmit",
    "test": "npm run lint && npm run test:unit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "blue-tape -r ts-node/register \"src/**/*.spec.ts\" \"src/*.spec.ts\" \"tests/*.spec.ts\" \"tests/**/*.spec.ts\"",
    "typedoc": "bash scripts/typedoc.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chatie/wechaty-puppet.git"
  },
  "keywords": [
    "chatie",
    "wechaty",
    "wechat",
    "chatbot",
    "bot",
    "sdk"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Chatie/wechaty-puppet/issues"
  },
  "homepage": "https://github.com/Chatie/wechaty-puppet#readme",
  "devDependencies": {
    "@types/blue-tape": "^0.1.31",
    "@types/node": "^10.3.6",
    "@types/normalize-package-data": "^2.4.0",
    "@types/quick-lru": "^1.1.0",
    "@types/read-pkg-up": "^3.0.1",
    "@types/semver": "^5.5.0",
    "@types/sinon": "^5.0.1",
    "blue-tape": "^1.0.0",
    "file-box": "^0.8.22",
    "git-scripts": "^0.2.1",
    "markdownlint-cli": "^0.13.0",
    "memory-card": "^0.6.7",
    "shx": "^0.3.1",
    "sinon": "^6.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.12.0",
    "tslint-config-standard": "^8.0.0",
    "typedoc-plugin-markdown": "^1.1.13",
    "typescript": "^3.0.1"
  },
  "git": {
    "scripts": {
      "pre-push": "./scripts/pre-push.sh"
    }
  },
  "peerDependencies": {
    "memory-card": "^0.6.7",
    "file-box": "^0.8.22"
  },
  "dependencies": {
    "brolog": "^1.6.5",
    "clone-class": "^0.6.19",
    "hot-import": "^0.2.1",
    "normalize-package-data": "^2.4.0",
    "quick-lru": "^1.1.0",
    "read-pkg-up": "^4.0.0",
    "rx-queue": "^0.6.1",
    "rxjs": "^6.2.1",
    "semver": "^5.5.0",
    "state-switch": "^0.6.2",
    "watchdog": "^0.8.12"
  }
}
